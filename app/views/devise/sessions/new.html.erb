<%= stylesheet_link_tag 'sessionsNew', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="sessionNew-all">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を記憶する  %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <hr>

  <div class="sessionNew-link">
    <%= link_to "アカウント作成", new_user_registration_path %></br>

    <%= link_to "パスワードをお忘れですか？", new_user_password_path %></br>

    <%= link_to "戻る", root_path%>
  </div>
</div>